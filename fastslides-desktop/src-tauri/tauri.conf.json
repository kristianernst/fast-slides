{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "FastSlides",
  "version": "0.1.0",
  "identifier": "com.kristianernst.fastslides.desktop",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://127.0.0.1:1420",
    "beforeDevCommand": "npm run dev:tauri",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "FastSlides",
        "width": 1440,
        "height": 920,
        "minWidth": 1024,
        "minHeight": 720,
        "resizable": true,
        "fullscreen": false,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
